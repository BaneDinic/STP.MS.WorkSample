<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STP microservices work sample</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/knockout/knockout-3.4.2.js"></script>
    <script type="text/javascript" src="~/lib/knockout/knockout.simpleGrid.3.0.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">STP microservices work sample</a>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @Html.Partial("_BreadcrumbsPartial")
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; 2018 - STP MS Work Sample</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
